{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "jsx": "preserve",
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "vite/client",
      "node",
      "emailjs-mime-parser"
    ],
    "baseUrl": "./",
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/services/axiosInterceptor/interceptors/crypto.js",
    "./auto-imports.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js"
  ],
}